<div class="article-content">
  <div class="ui grid">
    <div class="one wide column">
        <img class="avatar" src="/img/<%= user.avatar %>">
    </div>

    <div class="fourteen wide column">
      <div class="ui segment">
        <h3><a href="/articles/<%= article._id %>"><%= article.title %></a></h3>
        <pre><%- article.content %></pre>
        <div>
          <span class="tag"><%= new Date(article.createTime).toLocaleString() %></span>
          <span class="tag right">
            <span>浏览(<%= article.pv || 0 %>)</span>
          
            <% if (user && article.author && user.name.toString() === article.author.toString()) { %>
              <div class="ui inline dropdown">
                <div class="text"></div>
                <i class="dropdown icon"></i>
                <div class="menu">
                  <div class="item"><a href="/articles/<%= article._id %>/edit">编辑</a></div>
                  <div class="item"><a href="/articles/<%= article._id %>/remove">删除</a></div>
                </div>
              </div>
            <% } %>

          </span>
        </div>
      </div>
    </div>
  </div>
</div>
